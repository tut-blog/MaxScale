[maxscale]
threads=###threads###

[MySQL Monitor]
type=monitor
module=mysqlmon
servers=server1,server2
user=maxskysql
password=skysql
monitor_interval=1000

[Read Connection Router Master]
type=service
router=readconnroute
router_options=master,slave
servers=server1,server2
user=maxskysql
password=skysql

[Read Connection Listener Master]
type=listener
service=Read Connection Router Master
protocol=MySQLClient
port=4008

[CLI]
type=service
router=cli

[CLI Listener]
type=listener
service=CLI
protocol=maxscaled
socket=default

